{
  "name": "react-tailwind",
  "private": true,
  "main": "./main.js",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:build": "vite build",
    "electron:start": "electron .",
    "electron:dev": "electron-vite -c electron-vite.config.js",
    "electron:prod": "npm run build && electron-vite -c electron-vite.config.js --prod",
    "builder": "electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "tailwindcss": "^3.4.16",
    "vite": "^6.0.1"
  },
  "build": {
    "appId": "react-tailwind",
    "productName": "react-tailwind",
    "copyright": "GPL 3.0",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "./build/favicon.png",
      "target": "nsis"
    },
    "files": [
      "build/**/*",
      "./main.js"
    ],
    "extends": null
  }
}
